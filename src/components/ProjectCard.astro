---
interface Props {
  image: string;
  title: string;
  description: string;
  metrics: { label: string; value: string }[];
  bgColor: string;
}

const { image, title, description, metrics, bgColor } = Astro.props;
---

<div class={`card gold-border group ${bgColor}`}>
  <!-- Image -->
  <div class="rounded-2xl overflow-hidden mb-6 relative">
    <img 
      src={image} 
      alt={title}
      class="w-full h-48 object-cover transition-transform duration-500 group-hover:scale-110"
    />
    <div class="absolute top-4 left-4">
       <span class="w-8 h-1 bg-gold block rounded-full"></span>
    </div>
  </div>
  
  <!-- Content -->
  <h3 class="font-fraunces text-xl font-bold mb-2 text-text-dark">
    {title}
  </h3>
  <p class="text-sm text-gray-700 mb-6 leading-relaxed">
    {description}
  </p>
  
  <!-- Metrics -->
  <div class="grid grid-cols-3 gap-4 pt-4 border-t border-gray-300">
    {metrics.map(metric => (
      <div class="text-center">
        <div class="font-bold text-lg text-text-dark">{metric.value}</div>
        <div class="text-xs text-gray-600 uppercase tracking-wide">{metric.label}</div>
      </div>
    ))}
  </div>
</div>
